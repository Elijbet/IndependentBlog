
<div class="row">

  <div class="col-md-2">
    
  </div>

  <div class="col-md-10">
      <% @posts.each do |post| %>
      
        <h1 class="alpha"><%= post.title %></h1>
        <h4 class="byline">Posted on <%= post.created_at.strftime("%B %d, %Y") %> by <%= post.user.first_name %> <%= post.user.last_name %></h4>
          <div class="row">
            <div class="col-md-8">
              <h4><%= h(post.content).gsub(/\n/, '<br/>').html_safe %></h4>
              <h4><%= link_to 'Show', post %></h4>
              <% if current_user.id == post.user_id %>
                <h4><%= link_to 'Edit', edit_post_path(post) %></h4>
                <h4><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></h4>
              <% end %>
              <h4><%= link_to 'New Post', new_post_path %></h4>
            </div>
            <div class="col-md-4">
              

            </div>
          </div>
      <% end %>
  </div>
</div>









